<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.tictactoe.HelloController"
      style="-fx-background-color: linear-gradient(to bottom, #87CEFA, #00BFFF);"> <!-- Light blue gradient background -->

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Welcome to Tic-Tac-Toe!"
           style="-fx-font-size: 24px; -fx-text-fill: white;"/> <!-- Styled welcome label -->

    <Button text="Start Game"
            style="-fx-font-size: 18px; -fx-background-color: #FFA500; -fx-text-fill: white; -fx-padding: 10px 20px;">
        <onAction>#onHelloButtonClick</onAction>
    </Button> <!-- Styled Start Game button -->

</VBox>